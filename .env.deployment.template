AWS_REGION="eu-west-3"
AWS_ACCOUNT_ID="YOUR_AWS_ACCOUNT_ID"                  # ‚ö†Ô∏è REQUIRED - Your AWS account

# ECR configuration
ECR_REPOSITORY_NAME="your-repository-name"

# Build configuration
IMAGE_TAG="latest"
DOCKER_PLATFORM="linux/arm64"                         # or "linux/amd64"

# ============================================================================
# üîß NATIVE BUILD CONFIGURATION
